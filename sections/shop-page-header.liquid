<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section section--{{ section.settings.section_width }}-margin section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}">
  <div class="shop-page-header spacing-style" style="{% render 'spacing-style', settings: section.settings %}">
    <div class="shop-page-header__inner">
      <h3 class="shop-page-header__title">{{ page.title | upcase }}</h3>
      <a href="{{ section.settings.link_url }}" class="shop-page-header__link">
        {{ section.settings.link_text }}
      </a>
    </div>
  </div>
</div>

{% stylesheet %}
  .shop-page-header {
    padding-block: var(--padding-lg);
  }

  .shop-page-header__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .shop-page-header__title {
    margin: 0;
    text-transform: uppercase;
  }

  .shop-page-header__link {
    text-decoration: none;
    color: var(--color-foreground);
    transition: color var(--animation-speed) var(--animation-easing);
  }

  .shop-page-header__link:hover {
    color: var(--color-foreground);
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .shop-page-header {
      padding-block: clamp(1.5rem, 4vh, 2.5rem);
    }

    .shop-page-header__inner {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .shop-page-header__title {
      font-size: clamp(1.25rem, 5vw, 1.5rem);
    }

    .shop-page-header__link {
      font-size: 0.875rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Shop's Page Header",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Shop Women"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Page Link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ]
}
{% endschema %}