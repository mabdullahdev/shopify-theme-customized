<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}">
  <div
    class="shop-brands spacing-style"
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="shop-brands__header">
        {% if section.settings.heading != blank %}
          <h2 class="shop-brands__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="shop-brands__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="shop-brands__grid">
        {% for block in section.blocks %}
          {% render 'brand-card', block: block, section: section %}
        {% endfor %}
      </div>
    {% endif %}

    <div class="shop-brands__footer">
      <a href="{{ section.settings.view_all_link }}" class="shop-brands__view-all">
        {{ section.settings.view_all_text | default: 'View all brands' }}
        <svg class="shop-brands__arrow" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</div>

{% stylesheet %}
  .shop-brands {
    padding-block: clamp(2rem, 4vh, 3rem);
  }

  .shop-brands__header {
    max-width: var(--page-width);
    margin-inline: auto;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .shop-brands__title {
    margin: 0;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    text-transform: uppercase;
  }

  .shop-brands__subtitle {
    margin: 0;
    max-width: 32rem;
    font-size: 0.95rem;
    color: rgb(0 0 0 / 0.7);
  }

  .shop-brands__grid {
    max-width: var(--page-width);
    margin-inline: auto;
    display: grid;
    grid-template-columns: repeat(6, minmax(0, 1fr));
    gap: 0.75rem;
  }

  .shop-brands__card {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    transition: opacity var(--animation-speed) var(--animation-easing);
  }

  .shop-brands__card:hover {
    opacity: 0.8;
  }

  .shop-brands__media {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .shop-brands__media img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .shop-brands__media--placeholder {
    background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  }

  .shop-brands__placeholder {
    padding: 0.75rem 1rem;
    border-radius: 999px;
    background: rgb(255 255 255 / 0.9);
  }

  .shop-brands__placeholder-label {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .shop-brands__footer {
    max-width: var(--page-width);
    margin-inline: auto;
    margin-top: 2rem;
    display: flex;
    align-items: center;
  }

  .shop-brands__view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-foreground);
    font-size: 0.95rem;
    text-decoration: underline;
    text-decoration-color: #000;
    text-underline-offset: 0.25rem;
    transition: opacity var(--animation-speed) var(--animation-easing);
  }

  .shop-brands__view-all:hover {
    opacity: 0.8;
  }

  .shop-brands__arrow {
    flex-shrink: 0;
  }

  @media screen and (max-width: 999px) {
    .shop-brands__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 0.625rem;
    }
  }

  @media screen and (max-width: 749px) {
    .shop-brands {
      padding-block: clamp(2rem, 4vh, 3rem);
    }

    .shop-brands__header {
      margin-bottom: 1.25rem;
      text-align: left;
    }

    .shop-brands__title {
      font-size: clamp(1.5rem, 4vw, 1.75rem);
    }

    .shop-brands__subtitle {
      font-size: 0.875rem;
    }

    .shop-brands__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 0.75rem;
    }

    .shop-brands__footer {
      margin-top: 1.5rem;
    }
  }

  @media screen and (max-width: 480px) {

    .shop-brands__header {
      margin-bottom: 1rem;
    }

    .shop-brands__grid {
      grid-template-columns: minmax(0, 1fr);
      gap: 0.625rem;
    }
  }
{% endstylesheet %}

