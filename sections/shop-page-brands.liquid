<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}">
  <div
    class="shop-brands spacing-style"
    style="{% render 'spacing-style', settings: section.settings %}"
    {% if section.settings.enable_animations %}data-brands-animate{% endif %}
  >
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="shop-brands__header">
        {% if section.settings.heading != blank %}
          <h2 class="shop-brands__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="shop-brands__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      {% liquid
        assign grid_class = 'shop-brands__grid'
        if section.settings.mobile_carousel
          assign grid_class = grid_class | append: ' shop-brands__grid--mobile-carousel'
        endif
        if section.settings.grayscale_hover
          assign grid_class = grid_class | append: ' shop-brands__grid--grayscale'
        endif
      %}
      <div
        class="{{ grid_class }}"
        style="
          --brand-columns: {{ section.settings.columns }};
          --brand-columns-tablet: {{ section.settings.columns_tablet }};
          --brand-columns-mobile: {{ section.settings.columns_mobile }};
        "
      >
        {% for block in section.blocks %}
          {% render 'brand-card',
            block: block,
            section: section,
            show_name: section.settings.show_brand_name,
            card_style: section.settings.card_style
          %}
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.view_all_link != blank %}
      <div class="shop-brands__footer">
        <a href="{{ section.settings.view_all_link }}" class="shop-brands__view-all">
          {{ section.settings.view_all_text | default: 'View all brands' }}
          <svg class="shop-brands__arrow" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.querySelector('[data-brands-animate]');
    if (!section) return;

    const cards = section.querySelectorAll('.shop-brands__card');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          cards.forEach((card, index) => {
            setTimeout(() => {
              card.classList.add('is-visible');
            }, index * 50);
          });
          observer.disconnect();
        }
      });
    }, { threshold: 0.1 });

    observer.observe(section);
  });
</script>

{% stylesheet %}
  .shop-brands {
    padding-block: clamp(2rem, 4vh, 3rem);
  }

  .shop-brands__header {
    max-width: var(--page-width);
    margin-inline: auto;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .shop-brands__title {
    margin: 0;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    text-transform: uppercase;
  }

  .shop-brands__subtitle {
    margin: 0;
    max-width: 32rem;
    font-size: 0.95rem;
    color: rgb(0 0 0 / 0.7);
  }

  .shop-brands__grid {
    max-width: var(--page-width);
    margin-inline: auto;
    display: grid;
    grid-template-columns: repeat(var(--brand-columns, 6), minmax(0, 1fr));
    gap: 0.75rem;
  }

  /* Brand Card Styles */
  .shop-brands__card {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .shop-brands__card:hover {
    transform: translateY(-4px);
  }

  /* Animation initial state */
  [data-brands-animate] .shop-brands__card {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  [data-brands-animate] .shop-brands__card.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  [data-brands-animate] .shop-brands__card.is-visible:hover {
    transform: translateY(-4px);
  }

  .shop-brands__media {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    transition: transform 0.3s ease;
  }

  .shop-brands__media img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: filter 0.3s ease, transform 0.3s ease;
  }

  /* Grayscale hover effect */
  .shop-brands__grid--grayscale .shop-brands__media img {
    filter: grayscale(100%);
    opacity: 0.7;
  }

  .shop-brands__grid--grayscale .shop-brands__card:hover .shop-brands__media img {
    filter: grayscale(0%);
    opacity: 1;
    transform: scale(1.05);
  }

  /* Non-grayscale hover */
  .shop-brands__grid:not(.shop-brands__grid--grayscale) .shop-brands__card:hover .shop-brands__media img {
    transform: scale(1.05);
  }

  /* Card style variants */
  .shop-brands__card--bordered .shop-brands__media {
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .shop-brands__card--rounded .shop-brands__media {
    border-radius: 8px;
  }

  .shop-brands__card--shadow .shop-brands__media {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .shop-brands__card--shadow:hover .shop-brands__media {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .shop-brands__media--placeholder {
    background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  }

  .shop-brands__placeholder {
    padding: 0.75rem 1rem;
    border-radius: 999px;
    background: rgb(255 255 255 / 0.9);
  }

  .shop-brands__placeholder-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Brand name below logo */
  .shop-brands__name {
    margin-top: 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: rgba(0, 0, 0, 0.7);
  }

  .shop-brands__footer {
    max-width: var(--page-width);
    margin-inline: auto;
    margin-top: 2rem;
    display: flex;
    align-items: center;
  }

  .shop-brands__view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-foreground);
    font-size: 0.95rem;
    text-decoration: underline;
    text-decoration-color: currentColor;
    text-underline-offset: 0.25rem;
    transition: opacity 0.2s ease;
  }

  .shop-brands__view-all:hover {
    opacity: 0.7;
  }

  .shop-brands__arrow {
    flex-shrink: 0;
  }

  /* Mobile carousel mode */
  @media screen and (max-width: 749px) {
    .shop-brands__grid--mobile-carousel {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
      gap: 0.625rem;
      padding-bottom: 0.5rem;
    }

    .shop-brands__grid--mobile-carousel::-webkit-scrollbar {
      display: none;
    }

    .shop-brands__grid--mobile-carousel .shop-brands__card {
      flex: 0 0 auto;
      width: 28vw;
      min-width: 100px;
      max-width: 140px;
      scroll-snap-align: start;
    }
  }

  /* Responsive columns */
  @media screen and (max-width: 999px) {
    .shop-brands__grid:not(.shop-brands__grid--mobile-carousel) {
      grid-template-columns: repeat(var(--brand-columns-tablet, 4), minmax(0, 1fr));
      gap: 0.625rem;
    }
  }

  @media screen and (max-width: 749px) {
    .shop-brands {
      padding-block: clamp(1.5rem, 4vh, 2.5rem);
    }

    .shop-brands__header {
      margin-bottom: 1.25rem;
      text-align: left;
    }

    .shop-brands__title {
      font-size: clamp(1.5rem, 4vw, 1.75rem);
    }

    .shop-brands__subtitle {
      font-size: 0.875rem;
    }

    .shop-brands__grid:not(.shop-brands__grid--mobile-carousel) {
      grid-template-columns: repeat(var(--brand-columns-mobile, 3), minmax(0, 1fr));
      gap: 0.5rem;
    }

    .shop-brands__media {
      padding: 0.75rem;
    }

    .shop-brands__name {
      font-size: 0.65rem;
      margin-top: 0.375rem;
    }

    .shop-brands__footer {
      margin-top: 1.5rem;
    }

    .shop-brands__card:hover {
      transform: none;
    }
  }
{% endstylesheet %}

