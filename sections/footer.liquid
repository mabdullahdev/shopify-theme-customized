

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
>
  {% liquid
    assign total_blocks = section.blocks.size
  %}
  <div
    class="
      footer-content
      spacing-style
      footer-content--blocks-{{ total_blocks }}
    "
    style="
      {%  render 'spacing-style', settings: section.settings %}
      --footer-gap: {{ section.settings.gap }}px;
    "
  >
    {% content_for 'blocks' %}
  </div>
</div>

{% stylesheet %}
  .shopify-section:has(.footer-content) .section-background {
    background-color: var(--color-background);
  }

  .footer-content {
    contain: content;
    content-visibility: auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--footer-gap);
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .footer-content {
      grid-template-columns: 2fr 1fr;
    }
    
    .footer-content--blocks-1 {
      grid-template-columns: 2fr;
    }
    
    .footer-content--blocks-3,
    .footer-content--blocks-4 {
      grid-template-columns: 2fr 1fr 1fr;
    }
  }

  @media screen and (min-width: 990px) {
    /* Default: first block 40%, remaining 20% each */
    .footer-content {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
    
    /* 1 block: 40% */
    .footer-content--blocks-1 {
      grid-template-columns: 2fr;
    }
    
    /* 2 blocks: 40% + 20% */
    .footer-content--blocks-2 {
      grid-template-columns: 2fr 1fr;
    }
    
    /* 3 blocks: 40% + 20% + 20% */
    .footer-content--blocks-3 {
      grid-template-columns: 2fr 1fr 1fr;
    }
    
    /* 4 blocks: 40% + 20% + 20% + 20% */
    .footer-content--blocks-4 {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
    
    /* More than 4 blocks: wrap remaining */
    .footer-content--blocks-5,
    .footer-content--blocks-6,
    .footer-content--blocks-7,
    .footer-content--blocks-8 {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.footer",
  "class": "section-wrapper",
  "tag": "footer",
  "blocks": [
    {
      "type": "_divider"
    },
    {
      "type": "@app"
    },
    {
      "type": "button"
    },
    {
      "type": "follow-on-shop"
    },
    {
      "type": "group"
    },
    {
      "type": "icon"
    },
    {
      "type": "image"
    },
    {
      "type": "menu"
    },
    {
      "type": "payment-icons"
    },
    {
      "type": "text"
    },
    {
      "type": "logo"
    },
    {
      "type": "jumbo-text"
    },
    {
      "type": "social-links"
    },
    {
      "type": "email-signup"
    },
    {
      "type": "footer-shop-links"
    },
    {
      "type": "footer-support-links"
    },
    {
      "type": "footer-resell-links"
    }
  ],
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    }
  ]
}
{% endschema %}
