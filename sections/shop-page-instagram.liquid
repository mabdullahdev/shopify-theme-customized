<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}">
  <div class="shop-instagram spacing-style" style="{% render 'spacing-style', settings: section.settings %}">
    <div class="shop-instagram__inner">
      <div class="shop-instagram__icon" aria-hidden="true">
        <svg class="shop-instagram__icon-svg" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          {% render 'icon', icon: 'instagram' %}
        </svg>
      </div>
      {% if section.settings.heading != blank %}
        <h2 class="shop-instagram__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="shop-instagram__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      {% assign instagram_url = section.settings.instagram_url | default: 'https://www.instagram.com/ecot.store/' %}
      {% assign handle_display = section.settings.instagram_handle | default: '@ecot.store' %}
      <a
        href="{{ instagram_url }}"
        target="_blank"
        rel="noopener noreferrer"
        referrerpolicy="no-referrer"
        class="shop-instagram__link"
        aria-label="Follow {{ handle_display }} on Instagram"
      >
        {{ handle_display }}
        <span class="shop-instagram__arrow" aria-hidden="true">
          <svg width="16" height="16" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" d="M4.25 10h11.5m0 0-4-4m4 4-4 4"/>
          </svg>
        </span>
      </a>
    </div>
  </div>
</div>

{% stylesheet %}
  .shop-instagram {
    padding-block: clamp(1.5rem, 3vh, 2.5rem);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .shop-instagram__inner {
    max-width: var(--page-width);
    margin-inline: auto;
    padding-inline: var(--page-margin);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    text-align: center;
  }

  .shop-instagram__icon {
    width: 1.5rem;
    height: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-foreground);
    opacity: 0.7;
  }

  .shop-instagram__icon-svg {
    width: 100%;
    height: 100%;
  }

  .shop-instagram__heading {
    margin: 0;
    font-size: clamp(0.8125rem, 2vw, 0.9375rem);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--color-foreground);
    opacity: 0.9;
  }

  .shop-instagram__subheading {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-foreground);
    opacity: 0.6;
  }

  .shop-instagram__link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    margin-top: 0.25rem;
    text-decoration: underline;
    text-underline-offset: 0.2em;
    text-decoration-color: rgb(0 0 0 / 0.25);
    color: var(--color-foreground);
    font-size: 0.875rem;
    font-weight: 400;
    opacity: 0.85;
    transition: opacity 0.2s ease, text-decoration-color 0.2s ease;
  }

  .shop-instagram__link:hover {
    opacity: 1;
    text-decoration-color: currentColor;
  }

  .shop-instagram__arrow {
    display: flex;
    flex-shrink: 0;
    opacity: 0.7;
  }

  .shop-instagram__arrow svg {
    width: 0.75rem;
    height: 0.75rem;
  }

  @media screen and (max-width: 749px) {
    .shop-instagram {
      padding-block: clamp(1.25rem, 3vh, 2rem);
    }

    .shop-instagram__inner {
      gap: 0.5rem;
    }

    .shop-instagram__heading {
      font-size: 0.75rem;
    }

    .shop-instagram__subheading {
      font-size: 0.8125rem;
    }

    .shop-instagram__link {
      font-size: 0.8125rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Shop's Instagram",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow ECOT on Instagram"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "New drops and pre-loved inspo â€” follow along."
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram handle (display)",
      "default": "@ecot.store"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram profile URL"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        { "value": "page-width", "label": "t:options.page" },
        { "value": "full-width", "label": "t:options.full" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ]
}
{% endschema %}
