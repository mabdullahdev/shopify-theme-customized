<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}">
  <div
    class="men-categories spacing-style"
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="men-categories__header">
        {% if section.settings.heading != blank %}
          <h2 class="men-categories__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="men-categories__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="men-categories__grid">
        {% for block in section.blocks %}
          {% render 'category-card', block: block, section: section %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .men-categories {
    padding-block: clamp(2rem, 4vh, 3rem);
  }

  .men-categories__header {
    max-width: var(--page-width);
    margin-inline: auto;
    margin-bottom: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .men-categories__title {
    margin: 0;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    text-transform: uppercase;
  }

  .men-categories__subtitle {
    margin: 0;
    max-width: 32rem;
    font-size: 0.95rem;
    color: rgb(0 0 0 / 0.7);
  }

  .men-categories__grid {
    max-width: var(--page-width);
    margin-inline: auto;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.75rem;
  }

  .men-categories__card {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    transition: opacity var(--animation-speed) var(--animation-easing);
  }

  .men-categories__card:hover {
    opacity: 0.8;
  }

  .men-categories__media {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .men-categories__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .men-categories__media--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  }

  .men-categories__placeholder {
    padding: 0.75rem 1rem;
    border-radius: 999px;
    background: rgb(255 255 255 / 0.9);
  }

  .men-categories__placeholder-label {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .men-categories__label {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 0.5rem;
    text-align: center;
  }

  .men-categories__name {
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media screen and (max-width: 999px) {
    .men-categories__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 0.625rem;
    }
  }

  @media screen and (max-width: 749px) {
    .men-categories {
      padding-block: clamp(2rem, 4vh, 3rem);
    }

    .men-categories__header {
      margin-bottom: 1.25rem;
      text-align: left;
    }

    .men-categories__title {
      font-size: clamp(1.5rem, 4vw, 1.75rem);
    }

    .men-categories__subtitle {
      font-size: 0.875rem;
    }

    .men-categories__grid {
      grid-template-columns: minmax(0, 1fr);
      gap: 0.75rem;
    }
  }

  @media screen and (max-width: 480px) {
    .men-categories__header {
      margin-bottom: 1rem;
    }

    .men-categories__grid {
      gap: 0.625rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Men's Categories Grid",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Men's categories"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore curated pre-loved pieces by category."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Men's categories grid",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Jackets"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Hoodies"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Shoes"
          }
        }
      ]
    }
  ]
}
{% endschema %}


