
<div
  class="footer-support"
  style="
    padding: {{ block.settings['padding-block-start'] }}px {{ block.settings['padding-inline-end'] }}px {{ block.settings['padding-block-end'] }}px {{ block.settings['padding-inline-start'] }}px;
  "
  {{ block.shopify_attributes }}
>
  {% if block.settings.heading != blank %}
    <h2
      class="footer-support__heading"
      style="
        color: {{ block.settings.text_color }};
        font-size: {{ block.settings.heading_size }}px;
        font-weight: {{ block.settings.heading_weight }};
        margin: 0 0 {{ block.settings.heading_spacing }}px 0;
      "
    >
      {{ block.settings.heading }}
    </h2>
  {% endif %}

  <nav class="footer-support__nav">
    <ul class="footer-support__list">
      {% if block.settings.link_1_label != blank %}
        <li class="footer-support__item">
          <a
            href="{{ block.settings.link_1_url }}"
            class="footer-support__link"
            style="color: {{ block.settings.text_color }};"
          >
            {{ block.settings.link_1_label }}
          </a>
        </li>
      {% endif %}

      {% if block.settings.link_2_label != blank %}
        <li class="footer-support__item">
          <a
            href="{{ block.settings.link_2_url }}"
            class="footer-support__link"
            style="color: {{ block.settings.text_color }};"
          >
            {{ block.settings.link_2_label }}
          </a>
        </li>
      {% endif %}

      {% if block.settings.link_3_label != blank %}
        <li class="footer-support__item">
          <a
            href="{{ block.settings.link_3_url }}"
            class="footer-support__link"
            style="color: {{ block.settings.text_color }};"
          >
            {{ block.settings.link_3_label }}
          </a>
        </li>
      {% endif %}

      {% if block.settings.link_4_label != blank %}
        <li class="footer-support__item">
          <a
            href="{{ block.settings.link_4_url }}"
            class="footer-support__link"
            style="color: {{ block.settings.text_color }};"
          >
            {{ block.settings.link_4_label }}
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
</div>

{% stylesheet %}
  .footer-support {
    width: 100%;
  }

  .footer-support__heading {
    text-align: left;
    line-height: 1.2;
  }

  .footer-support__nav {
    margin-top: 0;
  }

  .footer-support__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
  }

  .footer-support__item {
    margin: 0;
    padding: 0;
  }

  .footer-support__link {
    display: block;
    text-decoration: underline;
    font-weight: normal;
    text-align: left;
    line-height: 1.5;
    transition: opacity 0.2s ease;
  }

  .footer-support__link:hover {
    opacity: 0.7;
  }
{% endstylesheet %}

